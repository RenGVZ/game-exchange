<div class="dashboard-main-container">
  <div class="banner-individual-pages" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(https://images.unsplash.com/photo-1507925921958-8a62f3d1a50d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1955&q=80);">
    <div class="container">
      <div class="row justify-content-between">
      </div>
      <h1 class="text-center" style="color:white; padding-top: 8rem; font-size: 80px;">Games that <%= current_user.name %> is reserving</h1>
      <div class="row justify-content-center">
        <h1 style="color: white;"></h1>
      </div>
    </div>
  </div>
  <div class="cards">
    <% @reservations.each do |reservation| %>
      <% if reservation.game.photo.attached?%>
        <% background_url = cl_image_path reservation.game.photo.key %>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
        <div class="card">
          <div class="additional" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.4)), 
            url(https://images.pexels.com/photos/326240/pexels-photo-326240.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); 
            background-size: cover; background-position: center;">
            <div class="user-card">
              <div class="coords">
                <div class="stats">
                  <div class="text-box" style="position-absolute">
                    <p style="background-color: #09ff18bd; border-radius: 6px">From</p>
                    <div class="value"><%= reservation.start_date %></div>
                  </div>
                  <div class="text-box" style="position-absolute">
                    <p style="background-color: #ff7109cc; margin-top: 10px; border-radius: 6px">Until</p>
                    <div class="value"><%= reservation.end_date %></div>
                  </div>
                  
              </div>
            </div>
            
            <div class="more-info" style="margin-top: -11rem;">
              <h1><%= link_to reservation.game.name, game_path(reservation.game), style:"text-decoration: none; color: white;" %></h1>
                <%= link_to "Delete Reservation", reservation_path(reservation), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger", style:"color: white; display: block;" %>
              <div class="text-box" style="text-align: center;">      
                 
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <div class="card-category" style="background-image: url('<%= background_url %>')"></div>
          <span class="more">Mouse over the card for more info</span>
        </div>
        
        </div>
      
    <% end %>
  </div>
  </div>