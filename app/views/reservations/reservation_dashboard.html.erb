
  <h1 class= "text-center">My Reservation list</h1>
  <div class="cards">
    <% @reservations.each do |reservation| %>
      <% if reservation.game.photo.attached?%>
        <% background_url = cl_image_path reservation.game.photo.key %>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
        <div class="card">
          <div class="additional" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), 
            url(https://images.pexels.com/photos/1376766/nature-milky-way-galaxy-space-1376766.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); 
            background-size: cover; background-position: center;">
            <div class="user-card">
              <div class="coords">
                <div class="stats">
                  <div class="text-box" style="position-absolute">
                    <p style="background-color: #09ff18bd; border-radius: 6px">Started</p>
                    <div class="value"><%= reservation.start_date %></div>
                  </div>
                  <div class="text-box" style="position-absolute">
                    <p style="background-color: #ff0909b8; margin-top: 10px; border-radius: 6px">Ending</p>
                    <div class="value"><%= reservation.end_date %></div>
                  </div>
                  
              </div>
            </div>
            
            <div class="more-info" style="margin-top: -11rem;">
              <h1><%= link_to "Edit Status", edit_reservation_path(reservation), class:"btn btn-success", style:"color: white;" %></h1>
                         
              <div class="text-box" style="text-align: center;">      
                 
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <div class="card-category" style="background-image: url('<%= background_url %>')"></div>
          <span class="more">Mouse over the card for more info</span>
        </div>
        
        </div>
      
    <% end %>
  </div>