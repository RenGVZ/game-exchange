<div style="margin: 4em;">
  <h1>My Reservation list</h1>
  <div class="cards">
    <% @reservations.each do |reservation| %>
      <% if reservation.game.photo.attached?%>
        <% background_url = cl_image_path reservation.game.photo.key%>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
      <div class="card-category" style="background-image: url('<%= background_url %>')">
          <p><%= link_to reservation.game.name, reservation_path(reservation) %></p>
      </div>
    <% end %>
  </div>
</div>
