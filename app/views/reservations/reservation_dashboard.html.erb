
  <h1>My Reservation list</h1>
  <div class="cards">
    <% @reservations.each do |reservation| %>
      <% if reservation.game.photo.attached?%>
        <% background_url = cl_image_path reservation.game.photo.key %>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
      <%= link_to game_path(reservation) do  %>
        <div class="card">
          <div class="additional" style="background: linear-gradient(#b07333, #f46f0ec7);">
            <div class="user-card">
              <div class="coords">
                <div class="stats">
                  <div class="text-box">
                    <i class="fas fa-tag"></i>
                    <div class="value">$<%=  %></div>
                  </div>
                  <div class="text-box">
                    <i class="fa fa-gamepad"></i>
                    <div class="value"><%=  %></div>
                  </div>
                  <div class="text-box">
                    <i class="fas fa-tv"></i>
                    <div class="value"><%=  %></div>
                  </div>
              </div>
            </div>
            <div class="more-info">
              <h1 style="color: black;"><%= reservation.status %></h1>
              <div>
                <% if reservation.user.photo.attached?%>
                  <%= cl_image_tag reservation.user.photo.key, class: "avatar-large"%>
                <% else %>
                  <%= cl_image_tag "https://images.unsplash.com/photo-1529699310859-b163e33e4556?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1122&q=80", class: "avatar-large" %>
                <% end %>
              </div>
              <div class="user-name text-center" style="color: black">
                <%= reservation.user.name %>
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <div class="card-category" style="background-image: url('<%= background_url %>')"></div>
          <span class="more">Mouse over the card for more info</span>
        </div>
        
        </div>
      <% end %>
    <% end %>
  </div>

