  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1>Reservation</h1>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <tr>
              <th>Renter</th>
              <td>$<%= @reservation.user.name %></td>
            </tr>
            <tr>
              <th>Start Date</th>
              <td><%= @reservation.start_date %></td>
            </tr>
            <tr>
              <th>End Date</th>
              <td><%= @reservation.end_date %></td>
            </tr>
            <tr>
              <th>Status</th>
              <td><%= @reservation.status %></td>
            </tr>
          </thead>
        </tbody>
      </table>
        <%= link_to "Edit Status", edit_reservation_path, class: "btn btn-success btn-lg m-4", style:"color: white;" %>
    </div>
  </div>
