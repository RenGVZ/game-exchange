<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Make a Reservation for <%= @game.name%></h1>

      <%= simple_form_for [@game, @reservation] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>