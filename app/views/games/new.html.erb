<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new game</h1>

      <%= simple_form_for @game do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :platform, collection: [ "PS4", "Xbox", "Switch", "GBA", "Gamecube", "Wii", "Super nintendo" ] %>
        <%= f.input :genre, collection: [ "Action", "RPG", "First-person shooter" ] %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
