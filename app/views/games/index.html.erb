<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1511512578047-dfb367046420?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=scale);">
  <div class="container" style="margin-bottom: 25px; padding-bottom: 35px;">
    <h1 class="text-center" style="color:white; padding-top: 26px;">All of the world's games, at your fingertips</h1>
    <p></p>
    <%= link_to "Add your game", new_game_path, class: "btn btn-success btn-lg m-4", style:"color: white;" %>
  </div>
</div>

<div style="margin: 4em;">
  <div class="cards">
    <% @games.each do |game| %>
      <% if game.photo.attached?%>
        <% background_url = cl_image_path game.photo.key%>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
      <%= link_to game_path(game) do  %>
        <div class="card">
          <div class="additional">
            <div class="user-card">
              <div class="game-name center">
                <%= game.user.name %>
              </div>
            </div>
          <div class="more-info">
            <h1><%= game.name %></h1>
            <div class="coords">
              <div class="stats">
                <div>
                  <div class="title">Price</div>
                  <i class="fas fa-tag"></i>
                  <div class="value">$<%= game.price %></div>
                </div>
                
                <div>
                  <div class="title">Platform</div>
                  <i class="fa fa-gamepad"></i>
                  <div class="value"><%= game.platform %></div>
                </div>
                <div>
                  <div class="title">Genre</div>
                  <i class="fas fa-tv"></i>
                  <div class="value"><%= game.genre %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <div class="card-category" style="background-image: url('<%= background_url %>')">
          </div>
          <span class="more">Mouse over the card for more info</span>
        </div>
      </div> 
     <% end %> 
    <% end %>
  </div>
</div>

