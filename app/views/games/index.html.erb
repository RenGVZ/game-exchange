<div class="index-container">
  <div class="banner" style="background-image: url(https://images.unsplash.com/photo-1511512578047-dfb367046420?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=scale);">
    <div class="container" style="margin-bottom: 25px; padding-bottom: 35px;">
      <h1 class="text-center" style="color:white; padding-top: 26px;">All of the world's games, at your fingertips</h1>
      <p></p>
      <%= link_to "Add your game", new_game_path, class: "btn btn-success btn-lg m-4", style:"color: white; border-radius: 8px;" %>
      <%= link_to "Xbox", xbox_path, class: "btn btn-success btn-lg m-4", style:"color: white;" %>
      <%= link_to "PS4", ps4_path, class: "btn btn-primary btn-lg m-4", style:"color: white;" %>
      <%= link_to "Nintendo Switch", switch_path, class: "btn btn-danger btn-lg m-4", style:"color: white;" %>
    </div>
  </div>

  <div class="cards">
    <% @games.each do |game| %>
      <% if game.photo.attached?%>
        <% background_url = cl_image_path game.photo.key, width: 500, height: 400, crop: :scale %>
      <% else %>
        <% background_url = 'https://images.unsplash.com/photo-1510015632688-f18aa4c1a95e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80' %>
      <% end %>
      <%= link_to game_path(game) do  %>
        <div class="card">
          <div class="additional">
            <div class="user-card">
              <div class="coords">
                <div class="stats">
                  <div class="text-box">
                    <i class="fas fa-tag"></i>
                    <div class="value">$<%= game.price %></div>
                  </div>
                  <div class="text-box">
                    <i class="fa fa-gamepad"></i>
                    <div class="value"><%= game.platform %></div>
                  </div>
                  <div class="text-box">
                    <i class="fas fa-tv"></i>
                    <div class="value"><%= game.genre %></div>
                  </div>
                </div>
              </div>
              
              
            </div>
            <div class="more-info">
              <h1 style="color: black;"><%= game.name %></h1>
              <div>
                <% if game.user.photo.attached?%>
                  <%= cl_image_tag game.user.photo.key, class: "avatar-large"%>
                <% else %>
                  <%= cl_image_tag "https://images.unsplash.com/photo-1529699310859-b163e33e4556?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1122&q=80", class: "avatar-large" %>
                <% end %>
              </div>
              <div class="user-name text-center" style="color: black">
                <%= game.user.name %>
              </div>
            </div>
          </div>
          <div class="general">
            <div class="card-category" style="background-image: url('<%= background_url %>')">
            </div>
            <span class="more">Mouse over the card for more info</span>
          </div>
        </div> 
      <% end %> 
    <% end %>
  </div>
</div>