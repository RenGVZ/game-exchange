<div class="container">

  <h1><%= @game.name %></h1>
  <%= link_to "Back to all games", games_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Game info</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Price</th>
            <th>Genre</th>
            <th>Platform</th>
            <th>Delete</th>
          </thead>
          <% @game.name%>
            <tr>
              <td>$<%= @game.price %></td>
              <td><%= @game.genre %></td>
              <td><%= @game.platform %></td>
              <td>
                <%= link_to game_path(@game), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Reserve this game", new_game_reservation_path(@game), class: "btn btn-success btn-lg m-4", style:"color: white;"  %>
    </div>
  </div>
