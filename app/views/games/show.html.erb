<div class="container">

  <h1><%= @game.name %></h1>
  <%= link_to "Back to all games", games_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Game info</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Price</th>
            <th>Genre</th>
            <th>Platform</th>
            <th>Delete</th>
          </thead>
          <% @game.name%>
            <tr>
              <td>$<%= @game.price %></td>
              <td><%= @game.genre %></td>
              <td><%= @game.platform %></td>
              <td>
                <%= link_to game_path(@game), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Reserve this game", new_game_reservation_path(@game), class: "btn btn-success btn-lg m-4", style:"color: white;"  %>
    </div>

    <br>
    <% if @game.photo.attached?%>
      <%= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= cl_image_tag("f0e6lzfzkmdqtzfblz6t", width: 400, height: 300, crop: :fill) %>
    <% end %>
  </div>

  <h3>Reviews</h3>
  <% if @game.reviews.empty? %>
    <p>No reviews yet would you like to add the first!! </p>
  <% else %>
    <ul class="list-group">
      <% @game.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill">
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </span>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render "reviews/new", game: @game, review: @review %>
</div>
